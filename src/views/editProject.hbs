<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <title>add project</title>
    <style>
      .no-underline { text-decoration: none; }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="../assets/gambar/logo.png" alt="" width="50" height="40" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse">
          <ul
            class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-sm-between d-flex w-100"
          >
            <div class="d-flex">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/add-project">add Project</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/testimonials">Testimonials</a>
              </li>
            </div>
            <div class="d-flex">
              <li class="btn btn-light nav-item ms-auto">
                <a class="no-underline" href="/contact">contact</a>
              </li>
            </div>
          </ul>
        </div>
      </div>
    </nav>
    <div
      class="collapse navbar-collapse bg-gradient pt-2 pb-1 d-lg-none"
      id="navbarSupportedContent"
      style="
        position: absolute;
        z-index: 10;
        right: 0;
        left: 0;
        background-color: rgb(65, 64, 64);
      "
    >
      <ul class="d-block w-100 text-center list-unstyled">
        <li class="nav-item w-100 pt-2 pb-2">
          <a class="nav-link active text-light" href="/">Home</a>
        </li>
        <li class="nav-item w-100 pt-2 pb-2">
          <a class="nav-link text-light" href="/add-project">add Project</a>
        </li>
        <li class="nav-item w-100 pt-2 pb-2">
          <a class="nav-link text-light" href="/testimonials">Testimonials</a>
        </li>
        <li class="btn-light nav-item ms-auto w-100 pt-3 pb-3">
          <a class="no-underline" href="/contact">contact</a>
        </li>
      </ul>
    </div>

    <div class="container mt-4">
      <h1 class="text-center">Upload Project</h1>
    </div>
    <div style="width: 400px; margin: 50px auto">
      <form
        method="post"
        action="/edit-project"
        class="shadow-lg p-4"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="input-title" class="form-label">Title</label>
          <input
            name="inputTitle"
            value="{{edit.title}}"
            type="text"
            class="form-control"
            id="input-title"
          />
        </div>
        <div class="input-group mb-3" style="text-transform: capitalize">
          <div class="w-50">
            <label for="startDate">start date</label>
            <input
              id="startDate"
              value="{{edit.startDate}}"
              name="startDate"
              type="date"
              class="form-control"
              aria-label="Amount (to the nearest dollar)"
            />
          </div>
          <div class="w-50">
            <label for="endDate">end date</label>
            <input
              id="endDate"
              value="{{edit.endDate}}"
              name="endDate"
              type="date"
              class="form-control"
              aria-label="Amount (to the nearest dollar)"
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="input-description" class="form-label">Description</label>
          <textarea
            class="form-control"
            name="inputDescription"
            id="input-description"
            style="resize: none"
            rows="7"
          >
            {{edit.description}}
          </textarea>
        </div>
        <span>Technologies</span>
        <div class="d-flex justify-content-between mt-2">
          <div>
            <div class="mb-3 form-check">
              <input
                value="PHP"
                type="checkbox"
                class="form-check-input"
                id="php"
                name="framework"
              />
              <label class="form-check-label" for="php">PHP</label>
            </div>
            <div class="mb-3 form-check">
              <input
                value="Node js"
                type="checkbox"
                class="form-check-input"
                id="nodejs"
                name="framework"
              />
              <label class="form-check-label" for="nodejs">Node Js</label>
            </div>
          </div>
          <div class="justify-content-start w-50">
            <div class="mb-3 form-check">
              <input
                type="checkbox"
                name="framework"
                id="reactJs"
                value="React js"
                class="form-check-input"
              />
              <label class="form-check-label" for="nodejs">React js</label>
            </div>
            <div class="mb-3 form-check">
              <input
                type="checkbox"
                name="framework"
                class="form-check-input"
                id="java"
                value="Java"
              />
              <label class="form-check-label" for="nodejs">java</label>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input
            type="file"
            class="form-control"
            id="input-image"
            name="inputImage"
            accept="{{edit.image}}"
          />
          <label
            class="input-group-text"
            for="input-image"
            style="cursor: pointer"
          >Upload</label>
        </div>
        <div class="w-100 justify-content-end d-flex">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </body>
</html>